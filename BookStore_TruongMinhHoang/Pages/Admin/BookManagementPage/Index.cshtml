@page
@model BookStore_TruongMinhHoang.Pages.Admin.BookManagementPage.IndexModel

@{
    ViewData["Title"] = "Book Management Index";
}

<div class="container mt-5">
    <h1 class="text-center">Book Management</h1>

    <p>
        <a asp-page="Create" class="btn btn-success">Create New Book</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered mt-3">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Book[0].Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book[0].Isbn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book[0].Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book[0].Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book[0].Stock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book[0].PublicationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book[0].Genre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book[0].IsActive)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book[0].Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book[0].Publisher)
                    </th>
                    <th class="text-center" style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Book)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Isbn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stock)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PublicationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Genre)
                        </td>
                        <td>
                            @(item.IsActive == 1 ? "Active" : "Inactive")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Publisher.PublisherName)
                        </td>
                        <td class="text-center">
                            <a asp-page="./Edit" asp-route-id="@item.BookId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.BookId" class="btn btn-info btn-sm">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.BookId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
