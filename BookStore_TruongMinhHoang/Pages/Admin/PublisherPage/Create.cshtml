@page
@model BookStore_TruongMinhHoang.Pages.Admin.PublisherPage.CreateModel

@{
    ViewData["Title"] = "Create Publisher";
}

<div class="container mt-5">
    <h1 class="text-center">Create a New Publisher</h1>
    <hr />

    <div class="card shadow">
        <div class="card-header">
            <h5 class="mb-0">Publisher Details</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Publisher.PublisherName" class="control-label"></label>
                    <input asp-for="Publisher.PublisherName" class="form-control" placeholder="Enter publisher name" />
                    <span asp-validation-for="Publisher.PublisherName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Publisher.ContactEmail" class="control-label"></label>
                    <input asp-for="Publisher.ContactEmail" class="form-control" placeholder="Enter contact email" />
                    <span asp-validation-for="Publisher.ContactEmail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Publisher.WebsiteUrl" class="control-label"></label>
                    <input asp-for="Publisher.WebsiteUrl" class="form-control" placeholder="Enter website URL" />
                    <span asp-validation-for="Publisher.WebsiteUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Publisher.Address" class="control-label"></label>
                    <input asp-for="Publisher.Address" class="form-control" placeholder="Enter address" />
                    <span asp-validation-for="Publisher.Address" class="text-danger"></span>
                </div>


                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-page="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
