@page
@model BookStore_TruongMinhHoang.Pages.Admin.PublisherPage.IndexModel

@{
    ViewData["Title"] = "Publisher Management Index";
}

<div class="container mt-5">
    <h1 class="text-center">Publisher Management</h1>

    <p>
        <a asp-page="Create" class="btn btn-success">Create New Publisher</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered mt-3">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Publisher[0].PublisherName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Publisher[0].ContactEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Publisher[0].WebsiteUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Publisher[0].Address)
                    </th>
                    <th class="text-center" style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Publisher)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PublisherName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WebsiteUrl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td class="text-center" style="width: 200px;">
                            <a asp-page="./Edit" asp-route-id="@item.PublisherId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.PublisherId" class="btn btn-info btn-sm">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.PublisherId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this publisher?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
