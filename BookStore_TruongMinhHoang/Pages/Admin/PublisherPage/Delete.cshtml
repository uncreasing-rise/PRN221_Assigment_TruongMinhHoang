@page
@model BookStore_TruongMinhHoang.Pages.Admin.PublisherPage.DeleteModel

@{
    ViewData["Title"] = "Delete Publisher";
}

<div class="container mt-5">
    <h1 class="text-center">Delete Publisher</h1>
    <h3 class="text-danger text-center">Are you sure you want to delete this publisher?</h3>

    <div class="card shadow mt-4">
        <div class="card-header">
            <h5 class="mb-0">Publisher Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Publisher.PublisherName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Publisher.PublisherName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Publisher.ContactEmail)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Publisher.ContactEmail)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Publisher.WebsiteUrl)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Publisher.WebsiteUrl)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Publisher.Address)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Publisher.Address)
                </dd>

            </dl>

            <form method="post" class="text-center">
                <input type="hidden" asp-for="Publisher.PublisherId" />
                <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                <a asp-page="./Index" class="btn btn-outline-secondary btn-lg ms-3">Back to List</a>
            </form>
        </div>
    </div>
</div>
