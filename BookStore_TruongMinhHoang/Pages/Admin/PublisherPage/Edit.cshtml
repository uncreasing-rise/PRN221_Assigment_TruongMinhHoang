@page
@model BookStore_TruongMinhHoang.Pages.Admin.PublisherPage.EditModel

@{
    ViewData["Title"] = "Edit Publisher";
}

<div class="container mt-5">
    <h1 class="text-center">Edit Publisher</h1>

    <div class="card shadow mt-4">
        <div class="card-header">
            <h5 class="mb-0">Publisher Information</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Publisher.PublisherId" />

                <div class="form-group">
                    <label asp-for="Publisher.PublisherName" class="control-label"></label>
                    <input asp-for="Publisher.PublisherName" class="form-control" />
                    <span asp-validation-for="Publisher.PublisherName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Publisher.ContactEmail" class="control-label"></label>
                    <input asp-for="Publisher.ContactEmail" class="form-control" />
                    <span asp-validation-for="Publisher.ContactEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Publisher.WebsiteUrl" class="control-label"></label>
                    <input asp-for="Publisher.WebsiteUrl" class="form-control" />
                    <span asp-validation-for="Publisher.WebsiteUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Publisher.Address" class="control-label"></label>
                    <input asp-for="Publisher.Address" class="form-control" />
                    <span asp-validation-for="Publisher.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
