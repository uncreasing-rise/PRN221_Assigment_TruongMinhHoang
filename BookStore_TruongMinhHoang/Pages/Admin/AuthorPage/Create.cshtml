@page
@model BookStore_TruongMinhHoang.Pages.Admin.AuthorPage.CreateModel

@{
    ViewData["Title"] = "Create Author";
}

<h1>Create Author</h1>

<h4>Author Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Author.FirstName" class="control-label"></label>
                <input asp-for="Author.FirstName" class="form-control" placeholder="Enter First Name" />
                <span asp-validation-for="Author.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Author.LastName" class="control-label"></label>
                <input asp-for="Author.LastName" class="form-control" placeholder="Enter Last Name" />
                <span asp-validation-for="Author.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Author.Biography" class="control-label"></label>
                <textarea asp-for="Author.Biography" class="form-control" placeholder="Enter Biography" rows="4"></textarea>
                <span asp-validation-for="Author.Biography" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
