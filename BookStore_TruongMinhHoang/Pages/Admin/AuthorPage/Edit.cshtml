@page
@model BookStore_TruongMinhHoang.Pages.Admin.AuthorPage.EditModel

@{
    ViewData["Title"] = "Edit Author";
}

<div class="container mt-5">
    <h1 class="text-center">Edit Author</h1>
    <h4>Author Details</h4>
    <hr />

    <div class="card shadow">
        <div class="card-header">
            <h5 class="mb-0">Edit Author Information</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Author.AuthorId" />

                <div class="form-group">
                    <label asp-for="Author.FirstName" class="control-label"></label>
                    <input asp-for="Author.FirstName" class="form-control" placeholder="Enter first name" />
                    <span asp-validation-for="Author.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Author.LastName" class="control-label"></label>
                    <input asp-for="Author.LastName" class="form-control" placeholder="Enter last name" />
                    <span asp-validation-for="Author.LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Author.Biography" class="control-label"></label>
                    <textarea asp-for="Author.Biography" class="form-control" rows="3" placeholder="Enter biography"></textarea>
                    <span asp-validation-for="Author.Biography" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
