@page
@model BookStore_TruongMinhHoang.Pages.Admin.AuthorPage.IndexModel

@{
    ViewData["Title"] = "Authors Index";
}

<div class="container mt-5">
    <h1 class="text-center">Authors</h1>
    <hr />

    <p>
        <a asp-page="Create" class="btn btn-primary">Create New Author</a>
    </p>

    <div class="card shadow mt-4">
        <div class="card-header">
            <h5 class="mb-0">Author List</h5>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Authors[0].FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Authors[0].LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Authors[0].Biography)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Authors.Any())
                    {
                        foreach (var item in Model.Authors)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Biography)
                                </td>
                                <td>
                                    <a asp-page="./Edit" asp-route-id="@item.AuthorId" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-page="./Details" asp-route-id="@item.AuthorId" class="btn btn-info btn-sm">Details</a>
                                    <a asp-page="./Delete" asp-route-id="@item.AuthorId" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">No authors found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
