@page
@model BookStore_TruongMinhHoang.Pages.Admin.AuthorPage.DeleteModel

@{
    ViewData["Title"] = "Delete Author";
}

<h1>Delete Author</h1>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this author?</h4>
    <hr />
    <div>
        <h5>Author Details:</h5>
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Author.FirstName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Author.FirstName)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Author.LastName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Author.LastName)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Author.Biography)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Author.Biography)
            </dd>
        </dl>
    </div>
</div>

<div>
    <form method="post" class="d-inline">
        <input type="hidden" asp-for="Author.AuthorId" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
